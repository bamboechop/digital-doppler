---
import { Image } from 'astro:assets';
import { AstroFont } from 'astro-font';

interface Props {
	class?: string;
	title: string;
}

const { class: className, title, ...rest } = Astro.props;

const backgroundImageUrl = Astro.cookies.get('background-image-url')?.value ?? 'bg/1.png';
---

<!doctype html>
<html lang="de">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<AstroFont config={[
			{
				name: 'Caveat',
				src: [
					{ style: 'regular', weight: '400', path: './public/fonts/Caveat/Caveat-Regular.ttf' },
					{ style: 'regular', weight: '600', path: './public/fonts/Caveat/Caveat-SemiBold.ttf' },
				],
				preload: true,
				display: 'swap',
				fallback: 'sans-serif',
			},
			{
				name: 'ComicNeue',
				src: [
					{ style: 'regular', weight: '400', path: './public/fonts/Comic_Neue/ComicNeue-Regular.ttf' },
					{ style: 'italic', weight: '400', path: './public/fonts/Comic_Neue/ComicNeue-Italic.ttf' },
					{ style: 'regular', weight: '700', path: './public/fonts/Comic_Neue/ComicNeue-Bold.ttf' },
					{ style: 'italic', weight: '700', path: './public/fonts/Comic_Neue/ComicNeue-BoldItalic.ttf' },
				],
				preload: true,
				display: 'swap',
				fallback: 'sans-serif',
			},
			{
				name: 'DancingScript',
				src: [
					{ style: 'regular', weight: '400', path: './public/fonts/Dancing_Script/DancingScript-Regular.ttf' },
					{ style: 'regular', weight: '600', path: './public/fonts/Dancing_Script/DancingScript-SemiBold.ttf' },
				],
				preload: true,
				display: 'swap',
				fallback: 'sans-serif',
			},
			{
				name: 'Mali',
				src: [
					{ style: 'regular', weight: '400', path: './public/fonts/Mali/Mali-Regular.ttf' },
					{ style: 'italic', weight: '400', path: './public/fonts/Mali/Mali-Italic.ttf' },
					{ style: 'regular', weight: '600', path: './public/fonts/Mali/Mali-SemiBold.ttf' },
					{ style: 'italic', weight: '600', path: './public/fonts/Mali/Mali-SemiBoldItalic.ttf' },
				],
				preload: true,
				display: 'swap',
				fallback: 'sans-serif',
			},
		]} />
	</head>
	<body class="bg-[#230f01] bg-background-pattern flex items-center justify-center min-h-dvh">
		<main
			class="relative text-white text-lg w-full"
			class:list={[className]} {...rest}>
			<slot />
			<Image
				alt=""
				class="absolute bottom-1/4 left-[25px] -rotate-[22deg] drop-shadow-stationery"
				height="74px"
				src="/stationeries/rubber-eraser.png"
				width="215px" />
			<Image
				alt=""
				class="absolute top-[310px] left-[120px] -rotate-[9deg] drop-shadow-stationery"
				height="425px"
				src="/stationeries/marker-pink.png"
				width="107px" />
			<Image
				alt=""
				class="absolute bottom-[168px] left-[-161px] -translate-x-1/2 drop-shadow-stationery"
				height="32px"
				src="/stationeries/pencil-red.png"
				width="749px" />
			<Image
				alt=""
				class="absolute bottom-[134px] left-[-142px] -translate-x-1/2 drop-shadow-stationery"
				height="32px"
				src="/stationeries/pencil-orange.png"
				width="749px" />
			<Image
				alt=""
				class="absolute bottom-[100px] left-[-115px] -translate-x-1/2 drop-shadow-stationery"
				height="32px"
				src="/stationeries/pencil-silver.png"
				width="756px" />
			<Image
				alt=""
				class="absolute bottom-[66px] left-[-135px] -translate-x-1/2 drop-shadow-stationery"
				height="32px"
				src="/stationeries/pencil-green.png"
				width="756px" />
			<Image
				alt=""
				class="absolute bottom-[32px] left-[-100px] -translate-x-1/2 drop-shadow-stationery"
				height="32px"
				src="/stationeries/pencil-blue.png"
				width="751px" />
		</main>
		<script is:inline src="/lib/htmx.min.js"></script>
	</body>
</html>

<style define:vars={{ backgroundImageUrl }} is:global lang="scss">
	:root {
		--background-image-url: var(--backgroundImageUrl);
	}
</style>
